<% layout("/layouts/boilerplate") %>

<div class="row">
  <div class="col-8 offset-2">
    <h2>Listing Details :</h2>
    <div class="card col-6 offset-2">
      <img src="<%= listing.image %>" class="card-img-top show-image" alt="">
      <div class="card-body">
        <p class="card-text">
          <b>
            <%= listing.title %> <br>
            <%= listing.description %> <br>
            &#8377; <%= listing.price.toLocaleString("en-IN") %> <br>
            <%= listing.location %> <br>
            <%= listing.country %>
          </b>
        </p>
      </div>
    </div>

    <br />
    <div class="btns">
      <a href="/listing/<%= listing._id %>/edit" class="btn btn-dark col-2 offset-2">Edit this listing</a>

      <form action="/listing/<%= listing._id %>?_method=delete" method="post">
        <button class="btn btn-dark col-12 offset-5">Delete this listing</button>
      </form>
    </div><br>
  </body>
</div>
</div>

