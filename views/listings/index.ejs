<% layout("/layouts/boilerplate") %>
<body>
  <h2>All Listing</h2>
  <!-- <form action="/listing/new" method="get">
        <button>Create Listing</button>
    
      </form> -->
  <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1">
    <% for(let listing of allListing){ %>
    <a href="/listing/<%= listing._id %>" class="listing-link">
      <div class="card col">
        <img
          src="<%= listing.image  %>"
          class="card-img-top"
          alt="not"
          style="height: 20rem"
        />
        <div class="card-img-overlay">click me</div>
        <div class="card-body">
          <p class="card-text">
            <b> <%= listing.title %> </b>
            <br />
            &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
          </p>
        </div>
      </div>
    </a>

    <% } %>
  </div>
</body>
